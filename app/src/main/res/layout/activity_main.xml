<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/media_recorder"
            android:layout_width="match_parent"
            android:text="MediaPlay录制和播放"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/audio_recorder"
            android:layout_width="match_parent"
            android:text="AudioRecorder录制和播放"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/break_media_recorder"
            android:layout_width="match_parent"
            android:text="使用MediaRecorder断点录制、合成"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/media_codec_player"
            android:layout_width="match_parent"
            android:text="使用MediaCodec播放视频"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/record_convert_aac"
            android:layout_width="match_parent"
            android:text="录制输出aac文件"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/convert_mono_to_stereo"
            android:layout_width="match_parent"
            android:text="录制单声道pcm转双声道"
            android:layout_height="wrap_content"/>

</LinearLayout>